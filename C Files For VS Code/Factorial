#include <stdio.h>

int main()
{
    int factorial = 1, n;

    printf("Enter a Number:\n");
    scanf("%d", &n);

    if (n == 0 || n == 1)
    {
        printf("Result: 1\n");
    }
    else if (n<0)
    {
        printf("Please Enter A Positive Number:\n");
    }
    else
    {
        for (int i=n; i >= 2; i--)
        {
            factorial *= i;
        }
        
    }
    printf("Result:%d", factorial);
    
return 0;
}